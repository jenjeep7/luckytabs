rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Require email verification for all reads/writes
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    // Avatar uploads - users can only upload to their own folder
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Allow public read for avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General file uploads for authenticated users
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
