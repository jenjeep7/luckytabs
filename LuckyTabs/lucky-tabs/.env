# Completely disable TypeScript and ESLint checking
TSC_COMPILE_ON_ERROR=true
SKIP_PREFLIGHT_CHECK=true
DISABLE_ESLINT_PLUGIN=true

# Disable source maps and other memory-intensive features
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Optimize webpack for development
FAST_REFRESH=true
BROWSER=none

# Disable type checking entirely
TYPESCRIPT_HEAP_SIZE=4096
FORK_TS_CHECKER_WEBPACK_PLUGIN_MEMWATCH=false
